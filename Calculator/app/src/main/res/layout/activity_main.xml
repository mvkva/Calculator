<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mickey.ogosense.com.calculator.MainActivity"
    android:background="#181717">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/btnClear"
        android:maxWidth="30dp"
        android:textSize="40dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clearDisplay"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDel"
        android:textSize="30dp"
        android:layout_above="@+id/btn7"
        android:layout_toRightOf="@+id/btnClear"
        android:layout_alignRight="@+id/btn8"
        android:layout_alignEnd="@+id/btn8"
        android:text="DEL"
        android:layout_below="@+id/textView2"
        android:onClick="onDelete" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSquare"
        android:textSize="30dp"
        android:layout_above="@+id/btn8"
        android:layout_toRightOf="@+id/btnDel"
        android:layout_toEndOf="@+id/btnDel"
        android:layout_below="@+id/textView2"
        android:onClick="makeSquare"
        android:text="SQU" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDivide"
        android:text="/"
        android:textSize="40dp"
        android:layout_above="@+id/btnMultiply"
        android:layout_alignLeft="@+id/btnMultiply"
        android:layout_alignStart="@+id/btnMultiply"
        android:onClick="divide" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/btn7"
        android:textSize="40dp"
        android:layout_alignTop="@+id/btn8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickDigit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/btn8"
        android:textSize="40dp"
        android:layout_below="@+id/btnClear"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:onClick="onClickDigit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/btn9"
        android:textSize="40dp"
        android:layout_below="@+id/btnDel"
        android:layout_toRightOf="@+id/btnDel"
        android:layout_toEndOf="@+id/btnDel"
        android:onClick="onClickDigit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/btn4"
        android:textSize="40dp"
        android:layout_below="@+id/btn7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickDigit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMultiply"
        android:text="X"
        android:textSize="40dp"
        android:layout_below="@+id/btnSquare"
        android:layout_toRightOf="@+id/btnSquare"
        android:layout_toEndOf="@+id/btnSquare"
        android:onClick="multiply" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSubtract"
        android:layout_alignTop="@+id/btn6"
        android:text="-"
        android:layout_alignRight="@+id/btnMultiply"
        android:layout_alignEnd="@+id/btnMultiply"
        android:textSize="40dp"
        android:layout_alignLeft="@+id/btnMultiply"
        android:layout_alignStart="@+id/btnMultiply"
        android:onClick="subtract" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/btn6"
        android:layout_alignLeft="@+id/btn9"
        android:layout_alignStart="@+id/btn9"
        android:layout_toStartOf="@+id/btnSubtract"
        android:textSize="40dp"
        android:layout_alignTop="@+id/btn5"
        android:layout_alignRight="@+id/btn9"
        android:layout_alignEnd="@+id/btn9"
        android:onClick="onClickDigit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/btn5"
        android:layout_alignTop="@+id/btn4"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:textSize="40dp"
        android:onClick="onClickDigit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/btn1"
        android:textSize="40dp"
        android:layout_below="@+id/btn4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickDigit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/btn3"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toLeftOf="@+id/btnSubtract"
        android:layout_toStartOf="@+id/btnSubtract"
        android:textSize="40dp"
        android:layout_alignTop="@+id/btn2"
        android:onClick="onClickDigit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdd"
        android:layout_alignTop="@+id/btn3"
        android:layout_toRightOf="@+id/btn3"
        android:text="+"
        android:layout_alignRight="@+id/btnSubtract"
        android:layout_alignEnd="@+id/btnSubtract"
        android:textSize="40dp"
        android:onClick="add" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/btn0"
        android:layout_below="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:textSize="40dp"
        android:onClick="onClickDigit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/btn2"
        android:textSize="40dp"
        android:layout_alignTop="@+id/btn1"
        android:layout_alignRight="@+id/btn0"
        android:layout_alignEnd="@+id/btn0"
        android:onClick="onClickDigit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:textSize="40dp"
        android:layout_alignTop="@+id/btn0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEquals"
        android:layout_below="@+id/btn3"
        android:text="="
        android:layout_alignRight="@+id/btnAdd"
        android:layout_alignEnd="@+id/btnAdd"
        android:textSize="40dp"
        android:layout_alignLeft="@+id/btnAdd"
        android:layout_alignStart="@+id/btnAdd"
        android:onClick="equals" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSeparator"
        android:layout_below="@+id/btn3"
        android:layout_alignLeft="@+id/btn3"
        android:layout_alignStart="@+id/btn3"
        android:layout_toStartOf="@+id/btnAdd"
        android:textSize="40dp"
        android:layout_alignRight="@+id/btn3"
        android:layout_alignEnd="@+id/btn3"
        android:text="."
        android:onClick="separate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnDivide"
        android:layout_alignEnd="@+id/btnDivide"
        android:textSize="50dp"
        android:padding="10dp"
        android:textAlignment="textEnd"
        android:background="#fbfafa" />


</RelativeLayout>
